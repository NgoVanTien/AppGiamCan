    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:valueconverter="using:GiamCan.Converters"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    >
    <Page.Resources>
        <valueconverter:StringToDateTimeConverter x:Key="StringToDateTimeConverter"/>
    </Page.Resources>
    
    
    <!--<SplitView x:Name="SplitView" OpenPaneLength="256" CompactPaneLength="48" DisplayMode="Overlay" IsPaneOpen="False">-->
        <!--Ẩn nút back trên desktop app-->
