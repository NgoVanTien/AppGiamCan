        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            <!--<StackPanel Orientation="Horizontal">
                <RadioButton x:Name="HamburgerRadioButton" 
                             Click="HamburgerRadioButton_Click"
                             Style="{StaticResource NavRadioButtonStyle}" 
                             Tag="&#xE700;"
                             MaxWidth="100"/>-->
                <TextBlock TextAlignment="Center" HorizontalAlignment="Stretch" Margin="10,10,0,0" TextWrapping="Wrap" Text="GIẢM CÂN 360" VerticalAlignment="Top" Style="{StaticResource HeaderTextBlockStyle}" />
            <!--</StackPanel>-->
            <ScrollViewer Margin="10,20,10,10" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <CalendarDatePicker HorizontalAlignment="Left" IsCalendarOpen="True" />
                <ToggleSwitch x:ConnectionId='1' x:Name="toggleSwitch" HorizontalAlignment="Right"  VerticalAlignment="Top" OffContent="Mục tiêu" OnContent="Ngày"                               />
                <StackPanel x:ConnectionId='2' x:Name="ngayStackPanel" Grid.Row="1">
                    <FlipView x:ConnectionId='4' x:Name="dateFlipView" BorderBrush="Azure" Height="100"
                                ItemsSource="{Binding ThongKeNgayList}"                                                 >
                        <FlipView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Canvas Height="100" Width="100" Background="#FF7683FF">
                                        <StackPanel Width="100" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Day}" DataContext="{Binding Ngay, Converter={StaticResource StringToDateTimeConverter}}" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Month}" DataContext="{Binding Ngay, Converter={StaticResource StringToDateTimeConverter}}" Margin="0,0,8,0" Style="{StaticResource CaptionTextBlockStyle}"/>
                                                <TextBlock Text="{Binding Year}" DataContext="{Binding Ngay, Converter={StaticResource StringToDateTimeConverter}}" HorizontalAlignment="Right" Style="{StaticResource CaptionTextBlockStyle}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Canvas>
                                </StackPanel>
                            </DataTemplate>
                        </FlipView.ItemTemplate>
                    </FlipView>

                    <StackPanel Margin="10,20,0,0" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tổng lượng Kalo tiêu hao: " Margin="0,0,8,0" TextWrapping="Wrap" FontSize="16" />
                            <TextBlock x:ConnectionId='8' x:Name="kalotieuhaoTextBlock" FontSize="16" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tổng lượng Kalo đưa vào: " Margin="0,0,8,0"  TextWrapping="Wrap" FontSize="16" />
                            <TextBlock x:ConnectionId='7' x:Name="kaloduavaoTextBlock" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Số bài tập đã tập: " Margin="0,0,8,0"  TextWrapping="Wrap" FontSize="16" />
                            <TextBlock x:ConnectionId='6' x:Name="soluongbtTextBlock" FontSize="16"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tổng thời gian tập " Margin="0,0,8,0"  TextWrapping="Wrap" FontSize="16" />
                            <TextBlock x:ConnectionId='5' x:Name="thoigiantapTextBlock" FontSize="16"/>
                        </StackPanel>
                    </StackPanel>
                    <ListView ItemsSource="{Binding BaiTapList}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Tag="{Binding IdBaiTap}"/>
                                    <TextBlock Text="{Binding ThoiGianTap}"/>
                                    <TextBlock Text="{Binding LuongKaloTieuHao}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <StackPanel x:ConnectionId='3' x:Name="muctieuStackPanel" Grid.Row="1" Visibility="Collapsed">
                    <TextBlock Text="Hello world"/>
                </StackPanel>

                <!--<FlipView Grid.Row="1" MaxWidth="400" Height="180" BorderBrush="Black" BorderThickness="1"
                          ItemsSource="{x:Bind Groups, Mode=OneWay}">
                    <FlipView.ItemTemplate>
                        <DataTemplate x:DataType="data:ControlInfoDataGroup">
                            <Grid>
                                <Image Height="120" Source="{x:Bind ImagePath}" Stretch="Uniform" VerticalAlignment="Top"/>
                                <Border Background="#A5FFFFFF" Height="60" VerticalAlignment="Bottom">
                                    <TextBlock x:Name="Control2Text" Text="{x:Bind Title}"  Foreground="#CCFFFFFF" Padding="12,12" Style="{StaticResource TitleTextBlockStyle}" HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </FlipView.ItemTemplate>
                </FlipView>-->
            </Grid>
        </ScrollViewer>
    </Grid>
    <!--</SplitView>-->
</Page>

