<Page
    x:Class="GiamCan.Views.NhacNho"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GiamCan.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Padding="8 4" Height="44" Background="Bisque" BorderBrush="OrangeRed" BorderThickness="0 0 0 2">
            <Image Source="ms-appx:///Assets/logo.png" />
            <TextBlock TextAlignment="Left" FontSize="28" Margin="20,0,0,0" Text="GIẢM CÂN 360"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock TextWrapping="Wrap" Text="Nhắc nhở" Style="{StaticResource SubheaderTextBlockStyle}"/>
            <ScrollViewer>
                <!--Lay du lieu cac bao thuc dua ra day ... :/-->
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
