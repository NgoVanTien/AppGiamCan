            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Stretch" Margin="10,10,0,0" TextWrapping="Wrap" Text="GIẢM CÂN 360" VerticalAlignment="Top" Style="{StaticResource HeaderTextBlockStyle}" />
        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Text="Đặt nhắc nhở" Margin="0,0,0,12" Style="{StaticResource SubheaderTextBlockStyle}"/>
