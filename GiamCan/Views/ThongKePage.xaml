                            </Grid>
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
                                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
                                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
                                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
                                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
                                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
                                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
                                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
                                <TextBlock Text="" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Grid Width="40" Height="30" Tapped="Grid_Tapped">
